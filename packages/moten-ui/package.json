{
    "name": "@moten/ui",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "main": "./dist/vue3/moten.umd.cjs",
    "module": "./dist/vue3/moten.js",
    "types": "./dist/vue3/main.d.ts",
    "style": "./dist/vue3/style.css",
    "exports": {
        ".": {
            "import": "./dist/vue3/moten.js",
            "require": "./dist/vue3/moten.umd.cjs",
            "types": "./dist/vue3/main.d.ts"
        },
        "./style": {
            "import": "./dist/vue3/style.css",
            "require": "./dist/vue3/style.css"
        },
        "./vue2": {
            "import": "./dist/vue2/moten.js",
            "require": "./dist/vue2/moten.umd.cjs",
            "types": "./dist/vue2/main.d.ts"
        },
        "./vue2/style": {
            "import": "./dist/vue2/style.css",
            "require": "./dist/vue2/style.css"
        },
        "./*": "./*"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "preinstall": "pnpm switch:vue3",
        "dev": "pnpm clear:dist && pnpm dev:vue3",
        "dev:vue3": "pnpm switch:vue3 && vue-tsc && vite build --watch",
        "build": "pnpm clear:dist && pnpm build:vue2 && pnpm build:vue3",
        "build:vue3": "pnpm switch:vue3 && vue-tsc && vite build",
        "build:vue2": "pnpm switch:vue2 && vue-tsc && vite build --config vite.config.vue2.ts",
        "clear": "rimraf dist ./node_modules",
        "clear:dist": "rimraf dist",
        "test": "pnpm switch:vue3 && vitest",
        "coverage": "pnpm switch:vue3 && vitest run --coverage",
        "switch:vue3": "vue-demi-switch 3 vue3",
        "switch:vue2": "vue-demi-switch 2 vue2"
    },
    "dependencies": {
        "vue-demi": "^0.14.7",
        "vue2": "npm:vue@~2.6.14",
        "vue2.7": "npm:vue@~2.7.16",
        "vue3": "npm:vue@3"
    },
    "devDependencies": {
        "@sinclair/typebox": "^0.32.15",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/compiler-sfc": "^3.4.21",
        "@vue/composition-api": "^1.7.2",
        "@vue/test-utils": "^2.3.2",
        "autoprefixer": "^10.4.18",
        "jsdom": "^24.0.0",
        "postcss": "^8.4.35",
        "rimraf": "^5.0.5",
        "sass": "^1.71.1",
        "typescript": "^5.2.2",
        "vite": "^5.1.4",
        "vite-plugin-dts": "^3.7.3",
        "vite-plugin-vue2": "2.0.2",
        "vitest": "^1.3.1",
        "vue-tsc": "^1.8.27"
    }
}